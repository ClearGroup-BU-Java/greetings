<div class="panel panel-default">
  <div class="panel-heading"> 
    <h1>Termine</h1>
  </div> <!-- /.panel-heading --> 

  <div class="panel-body">
    <table>
      <thead>
        <tr>
          <th>Begin date</th>
          <th>End date</th>
          <th>External participant salutation</th>
          <th>External participant name</th>
          <th>External participant company</th>
          <th>Clear group employee salutation</th>
          <th>Clear group employee name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @appointments.each do |appointment| %>
          <tr>
            <td><%= appointment.begin_date %></td>
            <td><%= appointment.end_date %></td>
            <td><%= appointment.external_participant_salutation %></td>
            <td><%= appointment.external_participant_name %></td>
            <td><%= appointment.external_participant_company %></td>
            <td><%= appointment.clear_group_employee_salutation %></td>
            <td><%= appointment.clear_group_employee_name %></td>
            <td><%= link_to 'Anzeigen', appointment %></td>
            <td><%= link_to 'Bearbeiten', edit_appointment_path(appointment) %></td>
            <td><%= link_to 'LÃ¶schen', appointment, method: :delete, data: { confirm: 'Bist Du sicher?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="panel-footer">
    <%= link_to 'Neuer Termin', new_appointment_path %>
  </div> <!-- /.panel-footer -->
</div> <!-- /.panel panel-default -->
