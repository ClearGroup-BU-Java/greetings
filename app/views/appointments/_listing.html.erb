<div class="panel panel-default">
  <div class="panel-heading"> 
    <h1>Termine</h1>
  </div> <!-- /.panel-heading --> 

  <div class="panel-body">
    <table class="table">
      <thead>
        <tr>
          <th>Termin Beginn</th>
          <th>Termin Ende</th>
          <th>Teilnehmer Name</th>
          <th>Teilnehmer Firma</th>
          <th>Clear Group Mitarbeiter Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @appointments.each do |appointment| %>
          <tr>
            <td><%= appointment.begin_date.to_formatted_s("%A, %e.%m.%Y %H:%M Uhr") %></td>
            <td><%= appointment.end_time.to_formatted_s("%A, %e.%m.%Y %H:%M Uhr") %></td>
            <td><%= appointment.external_participant_salutation %> <%= appointment.external_participant_title %> <%= appointment.external_participant_name %></td>
            <td><%= appointment.external_participant_company %></td>
            <td><%= appointment.clear_group_employee_salutation %> <%= appointment.clear_group_employee_name %></td>
            <td><%= link_to 'Anzeigen', appointment %></td>
            <td><%= link_to 'Bearbeiten', edit_appointment_path(appointment) %></td>
            <td><%= link_to 'LÃ¶schen', appointment, method: :delete, data: { confirm: 'Bist Du sicher?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="panel-footer">
    <%= link_to 'Neuer Termin', new_appointment_path %>
  </div> <!-- /.panel-footer -->
</div> <!-- /.panel panel-default -->
