<%= form_for(@appointment) do |f| %>
  <% if @appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
      <% @appointment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :begin_date, 'Termin Beginn Datum' %>
    <div class="input-group date">
      <%= f.text_field :begin_date, class: "form-control" %>
      <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
    </div> 
  </div>
  <div class="form-group">
    <%= f.label :begin_time, 'Termin Beginn Uhrzeit' %>  
    <%= f.time_field :begin_time, class: "form_control" %>  
  </div>
  <div class="form-group">
    <%= f.label :end_time, 'Termin Ende Uhrzeit' %>
    <%= f.time_field :end_time, class: "form_control" %>        
  </div>
  <div class="form-group">
    <%= f.label :external_participant_salutation, 'Teilnehmer Anrede' %>
    <%= f.text_field :external_participant_salutation, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :external_participant_title, 'Teilnehmer Titel' %>
    <%= f.text_field :external_participant_title, class: "form-control" %>
  </div>  
  <div class="form-group">
    <%= f.label :external_participant_name, 'Teilnehmer Name' %>
    <%= f.text_field :external_participant_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :external_participant_company, 'Teilnehmer Firma' %>
    <%= f.text_field :external_participant_company, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :clear_group_employee_salutation, 'Clear Group Mitarbeiter Anrede' %>
    <%= f.text_field :clear_group_employee_salutation, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :clear_group_employee_name, 'Clear Group Mitarbeiter Name' %>
    <%= f.text_field :clear_group_employee_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Speichern", class: "btn btn-primary" %>
  </div>
<% end %>
