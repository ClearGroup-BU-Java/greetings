<div class="panel panel-default">
  <div class="panel-heading"> 
    <h2><%= t('.title', resource: resource_class.model_name.human , default: "Edit #{resource_name.to_s.humanize}") %></h2>
  </div> <!-- /.panel-heading -->

  <div class="panel-body">    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>    

      <div class="form-group">
        <%= f.label :email, 'E-Mail' %>
        <%= f.email_field :email, autofocus: true,  class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Passwort' %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it', default: 'leave blank if you do not want to change it') %>)</i>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'Passwort bestätigen' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, 'Aktuelles Passwort' %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes', default: 'we need your current password to confirm your changes') %>)</i>
        <%= f.password_field :current_password,  autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit t('.update', default: 'Speichern'), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div> <!-- /.panel-body -->

  <div class="panel-footer">
    <%= link_to "Zurück", :back %>
  </div> <!-- /.panel-footer -->
</div> <!-- /.panel panel-default -->
